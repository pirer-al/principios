{
"compilerOptions": {
"target": "ES2020",
"useDefineForClassFields": true,
"lib": ["ES2020", "DOM", "DOM.Iterable"],
"module": "ESNext",
"skipLibCheck": true,
"jsx": "react-jsx",
"moduleResolution": "bundler",
"resolveJsonModule": true,
"isolatedModules": true,
"noEmit": true,
"strict": true,
"ignoreDeprecations": "6.0",
"baseUrl": ".",
"paths": {
"@/components/*": ["src/components/*"],
"@/data/*": ["src/data/*"]
}
},
"include": ["src"]
}